

<h1 class="text-center mt-4">Listing all Articles</h1>
<div class="container">
    <% @articles.each do |article| %>
        <div class="row justify-content-md-center">
            <div class="col-8 mt-4">
                <div class="card text-center shadow mb-5 bg-white rounded">
                    <div class="card-header">
                        <ul class="nav nav-pills card-header-pills ">
                        <li class="nav-item col-4">
                            <a href="#"> <%= link_to 'View', article_path(article), class: "btn btn-outline-success" %> </a>
                        </li>
                        <li class="nav-item col-4">
                            <a href="#"> <%= link_to 'Edit', edit_article_path(article), class: "btn btn-outline-info" %> </a>
                        </li>
                        <li class="nav-item col-4 ">
                            <a href="#"> <%= link_to 'Delete', article_path(article), class: "btn btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %> </a>
                        </li>
                        </ul>
                    </div>
                    <div class="card-body">
                        <p><strong>Created by: @OFawcett</strong></p>
                        <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success" %></h5>
                        <p class="card-text"><%= truncate(article.description, length: 100) %></p>
                    </div>
                    <div class="footer text-center bg-dark">
                        <p class="card-text text-white">Created at: <strong><%= time_ago_in_words(article.created_at) %></strong></p>
                        <p class="card-text text-white">Updated at: <strong><%= time_ago_in_words(article.updated_at) %></strong></p>
                    </div>
                </div>
            </div>
        </div>
    <%end%>
</div>
